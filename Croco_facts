<body>
    <div class="container">
        <h1>Facts About Planet Earth</h1>
        <div id="facts-list"></div>
        <button id="generate-fact">Generate Another Fun Fact</button>
    </div>
    <script>
        const facts = [
            { fact: "Age", description: "Earth is approximately 4.54 billion years old." },
            { fact: "Size and Shape", description: "Earth has a diameter of about 12,742 kilometers (7,918 miles) and is not a perfect sphere; it is an oblate spheroid." },
            { fact: "Coverage", description: "About 71% of Earth's surface is covered by water, with the vast majority being saltwater in the oceans." },
            { fact: "Atmosphere", description: "Earth's atmosphere is composed of 78% nitrogen, 21% oxygen, and trace amounts of other gases." },
            { fact: "Magnetic Field", description: "Earth has a magnetic field generated by the movement of molten iron in its outer core." },
            { fact: "Tectonic Plates", description: "Earth's crust is divided into several large and small tectonic plates that float on the semi-fluid asthenosphere beneath them." },
            { fact: "Moon", description: "Earth has one natural satellite, the Moon, which is the fifth largest moon in the solar system." },
            { fact: "Seasons", description: "Earth's axial tilt of approximately 23.5 degrees is responsible for the changing seasons." },
            { fact: "Life", description: "Earth is the only known planet to support life, with a vast diversity of organisms." },
            { fact: "Rotation and Orbit", description: "Earth rotates on its axis once every 24 hours, resulting in day and night." }
        ];

        const factsList = document.getElementById('facts-list');
        const generateFactButton = document.getElementById('generate-fact');

        function displayFactsAsButtons() {
            factsList.innerHTML = ''; // Clear previous buttons
            facts.forEach((fact, index) => {
                const button = document.createElement('button');
                button.textContent = fact.fact;
                button.onclick = () => {
                    factsList.innerHTML = `<strong>${fact.fact}:</strong> ${fact.description}`;
                };
                factsList.appendChild(button);
            });
        }

        // Generate buttons when the page loads
        displayFactsAsButtons();

        // Add event listener to the button
        generateFactButton.addEventListener('click', displayFactsAsButtons);
    </script>
</body>
</html>
